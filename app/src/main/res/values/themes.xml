<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GoodPosture" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#FF64B5F6</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:actionMenuTextColor">@color/white</item>
        <item name="android:actionMenuTextAppearance">@style/CustomMenuItem</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.GoodPosture.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="CustomMenuItem" parent="@style/TextAppearance.AppCompat.Menu">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Theme.GoodPosture.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.GoodPosture.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>